{
    "name": "DriverManager",
    "version": "1.0.0",
    "description": "Manajemen dan update driver perangkat dengan tema dalang pengendali Indonesia",
    "author": "Tim Khatulistiwa OS",
    "category": "system",
    "type": "driver_management",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "sogan",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#B45309",
            "secondary": "#D97706",
            "accent": "#F59E0B",
            "background": "#FFFBEB"
        }
    },
    "permissions": [
        "driver_management",
        "hardware_access",
        "system_modification",
        "kernel_module_access",
        "device_enumeration",
        "cultural_assets_access",
        "network_download",
        "file_system_access",
        "registry_access",
        "service_control"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khatdriver.khat",
        "khathardware.khat"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "automatic_driver_detection": true,
        "driver_installation": true,
        "driver_updates": true,
        "driver_rollback": true,
        "hardware_compatibility": true,
        "cultural_driver_metaphors": true,
        "traditional_control_system": true,
        "indonesian_terminology": true,
        "driver_diagnostics": true,
        "performance_monitoring": true,
        "conflict_resolution": true,
