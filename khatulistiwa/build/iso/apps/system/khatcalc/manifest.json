{
    "name": "KhatCalc",
    "version": "1.0.0",
    "description": "Kalkulator dengan perhitungan dasar dan ilmiah bertemakan sempoa dan matematika tradisional Indonesia",
    "author": "Tim Khatulistiwa OS",
    "category": "productivity",
    "type": "calculator",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "parang_rusak",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#059669",
            "secondary": "#10B981",
            "accent": "#34D399",
            "background": "#ECFDF5"
        }
    },
    "permissions": [
        "basic_calculation",
        "scientific_calculation",
        "memory_storage",
        "cultural_assets_access",
        "audio_feedback",
        "clipboard_access",
        "file_export",
        "history_storage",
        "unit_conversion",
        "currency_conversion"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khatmath.khat",
        "khatcultural.khat"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "basic_arithmetic": true,
        "scientific_functions": true,
        "memory_operations": true,
        "calculation_history": true,
        "unit_conversion": true,
        "currency_conversion": true,
        "cultural_number_systems": true,
        "traditional_calculation_methods": true,
        "indonesian_terminology": true,
        "sempoa_visualization": true,
        "gamelan_audio_feedback": true,
        "batik_button_designs": true,
        "cultural_mathematical_concepts": true
    },
    "calculation_modes": [
        {
            "id": "basic",
            "name": "Basic",
            "cultural_name": "Hitung Dasar",
            "description": "Operasi aritmatika dasar",
            "icon": "basic_calc",
            "cultural_icon": "sempoa_sederhana",
            "operations": ["+", "-", "×", "÷", "=", "%"]
        },
        {
            "id": "scientific",
            "name": "Scientific",
            "cultural_name": "Hitung Ilmiah",
            "description": "Fungsi matematika lanjutan",
            "icon": "scientific_calc",
            "cultural_icon": "sempoa_lengkap",
            "operations": ["sin", "cos", "tan", "log", "ln", "√", "x²", "xʸ"]
        },
        {
            "id": "programmer",
            "name": "Programmer",
            "cultural_name": "Hitung Pemrogram",
            "description": "Operasi untuk programmer",
            "icon": "programmer_calc",
            "cultural_icon": "sempoa_digital",
            "operations": ["AND", "OR", "XOR", "NOT", "<<", ">>"]
        },
        {
            "id": "unit_converter",
            "name": "Unit Converter",
            "cultural_name": "Pengubah Satuan",
            "description": "Konversi satuan tradisional dan modern",
            "icon": "unit_converter",
            "cultural_icon": "timbangan_tradisional",
            "categories": ["length", "weight", "volume", "temperature"]
        },
        {
            "id": "currency",
            "name": "Currency",
            "cultural_name": "Mata Uang",
            "description": "Konversi mata uang",
            "icon": "currency_calc",
            "cultural_icon": "uang_tradisional",
            "currencies": ["IDR", "USD", "EUR", "JPY", "SGD"]
        }
    ],
    "traditional_units": [
        {
            "category": "length",
            "cultural_name": "Panjang",
            "units": [
                {
                    "id": "hasta",
                    "name": "Hasta",
                    "description": "Satuan panjang tradisional Jawa",
                    "conversion_to_meter": 0.457,
                    "cultural_icon": "hasta_icon"
                },
                {
                    "id": "depa",
                    "name": "Depa",
                    "description": "Rentang kedua tangan",
                    "conversion_to_meter": 1.7,
                    "cultural_icon": "depa_icon"
                },
                {
                    "id": "tumbak",
                    "name": "Tumbak",
                    "description": "Panjang tombak tradisional",
                    "conversion_to_meter": 3.75,
                    "cultural_icon": "tumbak_icon"
                }
            ]
        },
        {
            "category": "weight",
            "cultural_name": "Berat",
            "units": [
                {
                    "id": "kati",
                    "name": "Kati",
                    "description": "Satuan berat tradisional",
                    "conversion_to_kg": 0.617,
                    "cultural_icon": "kati_icon"
                },
                {
                    "id": "pikul",
                    "name": "Pikul",
                    "description": "Beban yang dapat dipikul",
                    "conversion_to_kg": 61.76,
                    "cultural_icon": "pikul_icon"
                },
                {
                    "id": "tahil",
                    "name": "Tahil",
                    "description": "Satuan berat emas",
                    "conversion_to_kg": 0.0377,
                    "cultural_icon": "tahil_icon"
                }
            ]
        },
        {
            "category": "volume",
            "cultural_name": "Isi",
            "units": [
                {
                    "id": "gantang",
                    "name": "Gantang",
                    "description": "Takaran beras tradisional",
                    "conversion_to_liter": 3.125,
                    "cultural_icon": "gantang_icon"
                },
                {
                    "id": "cawan",
                    "name": "Cawan",
                    "description": "Takaran kecil",
                    "conversion_to_liter": 0.195,
                    "cultural_icon": "cawan_icon"
                }
            ]
        }
    ],
    "number_systems": [
        {
            "id": "decimal",
            "name": "Decimal",
            "cultural_name": "Desimal",
            "base": 10,
            "digits": "0123456789",
            "description": "Sistem bilangan basis 10"
        },
        {
            "id": "binary",
            "name": "Binary",
            "cultural_name": "Biner",
            "base": 2,
            "digits": "01",
            "description": "Sistem bilangan basis 2"
        },
        {
            "id": "hexadecimal",
            "name": "Hexadecimal",
            "cultural_name": "Heksadesimal",
            "base": 16,
            "digits": "0123456789ABCDEF",
            "description": "Sistem bilangan basis 16"
        },
        {
            "id": "javanese",
            "name": "Javanese",
            "cultural_name": "Angka Jawa",
            "base": 10,
            "digits": "꧐꧑꧒꧓꧔꧕꧖꧗꧘꧙",
            "description": "Sistem angka tradisional Jawa"
        }
    ],
    "button_layout": {
        "basic_mode": [
            ["C", "CE", "⌫", "÷"],
            ["7", "8", "9", "×"],
            ["4", "5", "6", "-"],
            ["1", "2", "3", "+"],
            ["±", "0", ".", "="]
        ],
        "scientific_mode": [
            ["2nd", "π", "e", "C", "⌫"],
            ["x²", "1/x", "|x|", "exp", "mod"],
            ["√", "(", ")", "n!", "÷"],
            ["xʸ", "7", "8", "9", "×"],
            ["log", "4", "5", "6", "-"],
            ["ln", "1", "2", "3", "+"],
            ["sin", "±", "0", ".", "="]
        ]
    },
    "memory_operations": [
        {
            "id": "mc",
            "name": "MC",
            "cultural_name": "Hapus Ingatan",
            "description": "Memory Clear - hapus memori",
            "icon": "memory_clear"
        },
        {
            "id": "mr",
            "name": "MR",
            "cultural_name": "Baca Ingatan",
            "description": "Memory Recall - baca memori",
            "icon": "memory_recall"
        },
        {
            "id": "ms",
            "name": "MS",
            "cultural_name": "Simpan Ingatan",
            "description": "Memory Store - simpan ke memori",
            "icon": "memory_store"
        },
        {
            "id": "m_plus",
            "name": "M+",
            "cultural_name": "Tambah Ingatan",
            "description": "Memory Plus - tambah ke memori",
            "icon": "memory_plus"
        },
        {
            "id": "m_minus",
            "name": "M-",
            "cultural_name": "Kurang Ingatan",
            "description": "Memory Minus - kurang dari memori",
            "icon": "memory_minus"
        }
    ],
    "cultural_features": {
        "sempoa_visualization": true,
        "traditional_calculation_sounds": true,
        "indonesian_number_pronunciation": true,
        "cultural_mathematical_terms": true,
        "batik_button_patterns": true,
        "traditional_unit_conversions": true,
        "javanese_numeral_support": true,
        "cultural_calculation_ceremonies": true
    },
    "audio_feedback": [
        {
            "id": "button_press",
            "name": "Button Press",
            "cultural_name": "Tekan Tombol",
            "sound_file": "sempoa_click.ogg",
            "volume": 0.5
        },
        {
            "id": "calculation_complete",
            "name": "Calculation Complete",
            "cultural_name": "Hitung Selesai",
            "sound_file": "gamelan_result.ogg",
            "volume": 0.7
        },
        {
            "id": "error_sound",
            "name": "Error",
            "cultural_name": "Kesalahan",
            "sound_file": "gong_error.ogg",
            "volume": 0.6
        },
        {
            "id": "memory_operation",
            "name": "Memory Operation",
            "cultural_name": "Operasi Ingatan",
            "sound_file": "chime_memory.ogg",
            "volume": 0.4
        }
    ],
    "keyboard_shortcuts": [
        {
            "key": "0-9",
            "action": "input_number",
            "cultural_description": "Masukkan angka"
        },
        {
            "key": "+",
            "action": "add",
            "cultural_description": "Tambah"
        },
        {
            "key": "-",
            "action": "subtract",
            "cultural_description": "Kurang"
        },
        {
            "key": "*",
            "action": "multiply",
            "cultural_description": "Kali"
        },
        {
            "key": "/",
            "action": "divide",
            "cultural_description": "Bagi"
        },
        {
            "key": "Enter",
            "action": "equals",
            "cultural_description": "Sama dengan"
        },
        {
            "key": "Escape",
            "action": "clear",
            "cultural_description": "Bersihkan"
        },
        {
            "key": "Backspace",
            "action": "backspace",
            "cultural_description": "Hapus belakang"
        }
    ],
    "localization": {
        "default_language": "id_ID",
        "supported_languages": ["id_ID", "en_US", "jv_ID", "su_ID"]
    },
    "resources": {
        "icons": "resources/icons/",
        "sounds": "resources/sounds/",
        "cultural_assets": "cultural/",
        "themes": "resources/themes/",
        "fonts": "resources/fonts/"
    }
}
