{
    "name": "KhatNotes",
    "version": "1.0.0",
    "description": "Aplikasi catatan harian dengan tema lontar dan aksara tradisional Indonesia",
    "author": "Tim Khatulistiwa OS",
    "category": "productivity",
    "type": "notes_application",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "parang_rusak",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#92400E",
            "secondary": "#D97706",
            "accent": "#FBBF24",
            "background": "#FFFBEB"
        }
    },
    "permissions": [
        "file_system_access",
        "document_creation",
        "text_formatting",
        "image_embedding",
        "audio_recording",
        "handwriting_recognition",
        "cultural_assets_access",
        "traditional_fonts_access",
        "cloud_sync",
        "export_import"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khattext.khat",
        "khatcultural.khat"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "rich_text_editing": true,
        "traditional_paper_themes": true,
        "aksara_font_support": true,
        "handwriting_input": true,
        "voice_notes": true,
        "image_insertion": true,
        "cultural_templates": true,
        "traditional_formatting": true,
        "lontar_style_layout": true,
        "batik_backgrounds": true,
        "traditional_bookmarks": true,
        "cultural_stickers": true,
        "indonesian_spell_check": true,
        "traditional_numbering": true
    },
    "paper_themes": [
        {
            "id": "lontar",
            "name": "Lontar",
            "cultural_name": "Daun Lontar",
            "description": "Tema kertas seperti daun lontar tradisional",
            "background": "lontar_texture",
            "text_color": "#4A5568",
            "cultural_elements": true
        },
        {
            "id": "bamboo",
            "name": "Bambu",
            "cultural_name": "Kertas Bambu",
            "description": "Tema kertas dengan tekstur bambu",
            "background": "bamboo_texture",
            "text_color": "#2D3748",
            "cultural_elements": true
        },
        {
            "id": "batik",
            "name": "Batik",
            "cultural_name": "Kertas Batik",
            "description": "Tema dengan motif batik halus",
            "background": "batik_subtle",
            "text_color": "#1A202C",
            "cultural_elements": true
        },
        {
            "id": "modern",
            "name": "Modern",
            "cultural_name": "Kertas Modern",
            "description": "Tema kertas putih bersih modern",
            "background": "clean_white",
            "text_color": "#000000",
            "cultural_elements": false
        }
    ],
    "traditional_fonts": [
        {
            "id": "aksara_jawa",
            "name": "Aksara Jawa",
            "description": "Font aksara Jawa tradisional",
            "file": "fonts/aksara_jawa.ttf",
            "unicode_range": "A980-A9DF"
        },
        {
            "id": "aksara_bali",
            "name": "Aksara Bali",
            "description": "Font aksara Bali tradisional",
            "file": "fonts/aksara_bali.ttf",
            "unicode_range": "1B00-1B7F"
        },
        {
            "id": "aksara_sunda",
            "name": "Aksara Sunda",
            "description": "Font aksara Sunda tradisional",
            "file": "fonts/aksara_sunda.ttf",
            "unicode_range": "1B80-1BBF"
        },
        {
            "id": "traditional_latin",
            "name": "Latin Tradisional",
            "description": "Font Latin dengan gaya tradisional Indonesia",
            "file": "fonts/traditional_latin.ttf",
            "unicode_range": "0000-007F"
        }
    ],
    "note_categories": [
        {
            "id": "personal",
            "name": "Pribadi",
            "cultural_name": "Catatan Pribadi",
            "icon": "personal_note",
            "cultural_icon": "buku_harian",
            "color": "#3B82F6"
        },
        {
            "id": "work",
            "name": "Kerja",
            "cultural_name": "Catatan Kerja",
            "icon": "work_note",
            "cultural_icon": "catatan_tugas",
            "color": "#EF4444"
        },
        {
            "id": "study",
            "name": "Belajar",
            "cultural_name": "Catatan Belajar",
            "icon": "study_note",
            "cultural_icon": "buku_pelajaran",
            "color": "#10B981"
        },
        {
            "id": "cultural",
            "name": "Budaya",
            "cultural_name": "Catatan Budaya",
            "icon": "cultural_note",
            "cultural_icon": "lontar_budaya",
            "color": "#F59E0B"
        },
        {
            "id": "recipe",
            "name": "Resep",
            "cultural_name": "Resep Masakan",
            "icon": "recipe_note",
            "cultural_icon": "buku_resep",
            "color": "#8B5CF6"
        }
    ],
    "cultural_templates": [
        {
            "id": "diary_entry",
            "name": "Entri Harian",
            "description": "Template untuk catatan harian",
            "content": "# Catatan Hari Ini\n\n**Tanggal:** {date}\n**Cuaca:** \n**Mood:** \n\n## Kegiatan Hari Ini\n\n\n## Refleksi\n\n\n## Rencana Besok\n\n"
        },
        {
            "id": "meeting_notes",
            "name": "Notulen Rapat",
            "description": "Template untuk notulen rapat",
            "content": "# Notulen Rapat\n\n**Tanggal:** {date}\n**Waktu:** \n**Tempat:** \n**Peserta:** \n\n## Agenda\n\n\n## Pembahasan\n\n\n## Keputusan\n\n\n## Tindak Lanjut\n\n"
        },
        {
            "id": "recipe_template",
            "name": "Resep Masakan",
            "description": "Template untuk resep masakan Indonesia",
            "content": "# Resep {nama_masakan}\n\n**Asal Daerah:** \n**Porsi:** \n**Waktu Memasak:** \n\n## Bahan-bahan\n\n\n## Bumbu Halus\n\n\n## Cara Memasak\n\n\n## Tips\n\n"
        },
        {
            "id": "cultural_story",
            "name": "Cerita Budaya",
            "description": "Template untuk mencatat cerita dan legenda",
            "content": "# Cerita: {judul}\n\n**Asal Daerah:** \n**Jenis:** Legenda/Dongeng/Sejarah\n**Sumber:** \n\n## Ringkasan\n\n\n## Tokoh Utama\n\n\n## Pesan Moral\n\n\n## Nilai Budaya\n\n"
        }
    ],
    "formatting_options": [
        {
            "id": "traditional_numbering",
            "name": "Penomoran Tradisional",
            "description": "Sistem penomoran dengan angka Jawa/Bali",
            "styles": ["angka_jawa", "angka_bali", "angka_arab"]
        },
        {
            "id": "cultural_bullets",
            "name": "Bullet Budaya",
            "description": "Bullet points dengan ornamen tradisional",
            "styles": ["ornamen_candi", "motif_batik", "simbol_garuda"]
        },
        {
            "id": "traditional_borders",
            "name": "Border Tradisional",
            "description": "Border dengan ornamen Indonesia",
            "styles": ["border_candi", "border_batik", "border_wayang"]
        }
    ],
    "cultural_features": {
        "lontar_paper_simulation": true,
        "traditional_writing_tools": true,
        "aksara_input_support": true,
        "cultural_stickers": true,
        "traditional_bookmarks": true,
        "batik_dividers": true,
        "ornamental_headers": true,
        "traditional_page_numbering": true,
        "cultural_color_schemes": true,
        "indonesian_date_format": true
    },
    "export_formats": [
        {
            "id": "pdf",
            "name": "PDF",
            "description": "Export ke format PDF dengan layout tradisional",
            "cultural_layout": true
        },
        {
            "id": "html",
            "name": "HTML",
            "description": "Export ke halaman web dengan CSS batik",
            "cultural_layout": true
        },
        {
            "id": "txt",
            "name": "Text",
            "description": "Export ke plain text",
            "cultural_layout": false
        },
        {
            "id": "docx",
            "name": "Word",
            "description": "Export ke Microsoft Word",
            "cultural_layout": false
        }
    ],
    "localization": {
        "default_language": "id_ID",
        "supported_languages": ["id_ID", "en_US", "jv_ID", "su_ID", "ban_ID"]
    },
    "resources": {
        "icons": "resources/icons/",
        "sounds": "resources/sounds/",
        "cultural_assets": "cultural/",
        "themes": "resources/themes/",
        "fonts": "resources/fonts/",
        "templates": "resources/templates/"
    }
}
