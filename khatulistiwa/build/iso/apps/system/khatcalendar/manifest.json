{
    "name": "KhatCalendar",
    "version": "1.0.0",
    "description": "Kalender terpadu dengan hari raya Indonesia, sistem Jawa, dan penanggalan tradisional",
    "author": "Tim Khatulistiwa OS",
    "category": "productivity",
    "type": "calendar_application",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "sido_mukti",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#7C2D12",
            "secondary": "#EA580C",
            "accent": "#FB923C",
            "background": "#FFF7ED"
        }
    },
    "permissions": [
        "calendar_access",
        "event_management",
        "notification_scheduling",
        "cultural_data_access",
        "time_zone_access",
        "reminder_system",
        "cultural_assets_access",
        "traditional_calendar_data",
        "holiday_database_access",
        "lunar_calendar_calculation"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khatnotif.khat",
        "khatcultural.khat"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "gregorian_calendar": true,
        "javanese_calendar": true,
        "hijri_calendar": true,
        "balinese_calendar": true,
        "indonesian_holidays": true,
        "traditional_events": true,
        "cultural_reminders": true,
        "event_scheduling": true,
        "recurring_events": true,
        "cultural_themes": true,
        "traditional_time_display": true,
        "lunar_phase_display": true,
        "seasonal_indicators": true,
        "cultural_event_suggestions": true
    },
    "calendar_systems": [
        {
            "id": "gregorian",
            "name": "Masehi",
            "cultural_name": "Kalender Masehi",
            "description": "Kalender internasional standar",
            "enabled": true,
            "primary": true
        },
        {
            "id": "javanese",
            "name": "Jawa",
            "cultural_name": "Kalender Jawa",
            "description": "Sistem penanggalan tradisional Jawa",
            "enabled": true,
            "primary": false
        },
        {
            "id": "hijri",
            "name": "Hijriah",
            "cultural_name": "Kalender Hijriah",
            "description": "Kalender Islam berdasarkan bulan",
            "enabled": true,
            "primary": false
        },
        {
            "id": "balinese",
            "name": "Bali",
            "cultural_name": "Kalender Bali",
            "description": "Sistem penanggalan Hindu-Bali",
            "enabled": false,
            "primary": false
        }
    ],
    "indonesian_holidays": [
        {
            "id": "new_year",
            "name": "Tahun Baru Masehi",
            "date": "01-01",
            "type": "national",
            "cultural_significance": "Perayaan pergantian tahun internasional"
        },
        {
            "id": "independence_day",
            "name": "Hari Kemerdekaan RI",
            "date": "08-17",
            "type": "national",
            "cultural_significance": "Hari proklamasi kemerdekaan Indonesia"
        },
        {
            "id": "kartini_day",
            "name": "Hari Kartini",
            "date": "04-21",
            "type": "national",
            "cultural_significance": "Mengenang perjuangan emansipasi wanita"
        },
        {
            "id": "pancasila_day",
            "name": "Hari Lahir Pancasila",
            "date": "06-01",
            "type": "national",
            "cultural_significance": "Hari lahir ideologi bangsa Indonesia"
        },
        {
            "id": "education_day",
            "name": "Hari Pendidikan Nasional",
            "date": "05-02",
            "type": "national",
            "cultural_significance": "Mengenang Ki Hajar Dewantara"
        }
    ],
    "traditional_events": [
        {
            "id": "nyepi",
            "name": "Hari Raya Nyepi",
            "calendar_system": "balinese",
            "type": "religious",
            "cultural_significance": "Hari suci umat Hindu Bali"
        },
        {
            "id": "galungan",
            "name": "Hari Raya Galungan",
            "calendar_system": "balinese",
            "type": "religious",
            "cultural_significance": "Perayaan kemenangan dharma"
        },
        {
            "id": "suro",
            "name": "Bulan Suro",
            "calendar_system": "javanese",
            "type": "traditional",
            "cultural_significance": "Bulan suci dalam kalender Jawa"
        },
        {
            "id": "waisak",
            "name": "Hari Raya Waisak",
            "calendar_system": "gregorian",
            "type": "religious",
            "cultural_significance": "Perayaan kelahiran Buddha"
        }
    ],
    "cultural_features": {
        "batik_calendar_grid": true,
        "traditional_month_names": true,
        "javanese_day_names": true,
        "cultural_event_icons": true,
        "traditional_color_coding": true,
        "ornamental_borders": true,
        "seasonal_backgrounds": true,
        "lunar_phase_indicators": true,
        "traditional_time_format": true,
        "cultural_event_descriptions": true
    },
    "view_modes": [
        {
            "id": "month",
            "name": "Bulanan",
            "cultural_name": "Tampilan Bulan",
            "description": "Tampilan kalender per bulan",
            "default": true
        },
        {
            "id": "week",
            "name": "Mingguan",
            "cultural_name": "Tampilan Minggu",
            "description": "Tampilan kalender per minggu"
        },
        {
            "id": "day",
            "name": "Harian",
            "cultural_name": "Tampilan Hari",
            "description": "Tampilan detail per hari"
        },
        {
            "id": "year",
            "name": "Tahunan",
            "cultural_name": "Tampilan Tahun",
            "description": "Tampilan overview per tahun"
        },
        {
            "id": "traditional",
            "name": "Tradisional",
            "cultural_name": "Tampilan Adat",
            "description": "Tampilan dengan kalender tradisional"
        }
    ],
    "event_types": [
        {
            "id": "personal",
            "name": "Pribadi",
            "color": "#3B82F6",
            "icon": "personal_event",
            "cultural_icon": "acara_pribadi"
        },
        {
            "id": "work",
            "name": "Kerja",
            "color": "#EF4444",
            "icon": "work_event",
            "cultural_icon": "acara_kerja"
        },
        {
            "id": "family",
            "name": "Keluarga",
            "color": "#10B981",
            "icon": "family_event",
            "cultural_icon": "acara_keluarga"
        },
        {
            "id": "cultural",
            "name": "Budaya",
            "color": "#F59E0B",
            "icon": "cultural_event",
            "cultural_icon": "acara_budaya"
        },
        {
            "id": "religious",
            "name": "Keagamaan",
            "color": "#8B5CF6",
            "icon": "religious_event",
            "cultural_icon": "acara_agama"
        }
    ],
    "reminder_types": [
        {
            "id": "notification",
            "name": "Notifikasi",
            "cultural_name": "Pemberitahuan",
            "description": "Pengingat melalui notifikasi sistem"
        },
        {
            "id": "sound",
            "name": "Suara",
            "cultural_name": "Bunyi Gamelan",
            "description": "Pengingat dengan suara tradisional"
        },
        {
            "id": "popup",
            "name": "Pop-up",
            "cultural_name": "Jendela Pengingat",
            "description": "Pengingat dengan jendela pop-up"
        }
    ],
    "traditional_time_units": [
        {
            "id": "javanese_hours",
            "name": "Jam Jawa",
            "description": "Pembagian waktu tradisional Jawa",
            "units": ["Subuh", "Dhuhur", "Ashar", "Maghrib", "Isya"]
        },
        {
            "id": "balinese_days",
            "name": "Hari Bali",
            "description": "Sistem hari dalam kalender Bali",
            "cycles": ["Ekawara", "Dwiwara", "Triwara", "Caturwara", "Pancawara"]
        }
    ],
    "localization": {
        "default_language": "id_ID",
        "supported_languages": ["id_ID", "en_US", "jv_ID", "su_ID", "ban_ID"]
    },
    "resources": {
        "icons": "resources/icons/",
        "sounds": "resources/sounds/",
        "cultural_assets": "cultural/",
        "themes": "resources/themes/",
        "calendar_data": "resources/calendar_data/"
    }
}
