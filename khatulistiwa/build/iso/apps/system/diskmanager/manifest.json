{
    "name": "DiskManager",
    "version": "1.0.0",
    "description": "Manajemen disk, partisi, dan media penyimpanan dengan tema lumbung data Indonesia",
    "author": "Tim Khatulistiwa OS",
    "category": "system",
    "type": "disk_management",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "kawung",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#059669",
            "secondary": "#10B981",
            "accent": "#34D399",
            "background": "#ECFDF5"
        }
    },
    "permissions": [
        "disk_management",
        "partition_access",
        "filesystem_operations",
        "mount_unmount",
        "format_operations",
        "cultural_assets_access",
        "system_integration",
        "storage_monitoring",
        "backup_operations",
        "disk_diagnostics"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khatstorage.khat",
        "khatfilesystem.khat"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "disk_partitioning": true,
        "filesystem_formatting": true,
        "mount_management": true,
        "storage_monitoring": true,
        "backup_restore": true,
        "cultural_storage_metaphors": true,
        "traditional_organization": true,
        "indonesian_terminology": true,
        "disk_health_monitoring": true,
        "automatic_cleanup": true,
        "storage_optimization": true,
        "cultural_visualization": true
    },
    "storage_types": [
