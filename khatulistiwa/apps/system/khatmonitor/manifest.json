{
    "name": "KhatMonitor",
    "version": "1.0.0",
    "description": "Task Manager dan System Monitor dengan visualisasi budaya Indonesia",
    "author": "Tim Khatulistiwa OS",
    "category": "system",
    "type": "system_monitor",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "nitik",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#7C3AED",
            "secondary": "#8B5CF6",
            "accent": "#A78BFA",
            "background": "#F5F3FF"
        }
    },
    "permissions": [
        "system_monitoring",
        "process_management",
        "memory_access",
        "cpu_monitoring",
        "network_monitoring",
        "disk_monitoring",
        "performance_data",
        "process_termination",
        "system_statistics",
        "cultural_assets_access"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khatsystem.khat"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "process_monitoring": true,
        "cpu_usage_charts": true,
        "memory_usage_charts": true,
        "network_monitoring": true,
        "disk_usage_monitoring": true,
        "performance_graphs": true,
        "process_termination": true,
        "system_information": true,
        "cultural_visualizations": true,
        "traditional_charts": true,
        "indonesian_terminology": true,
        "batik_progress_bars": true,
        "gamelan_alerts": true
    },
    "monitoring_categories": [
        {
            "id": "proses",
            "name": "Proses Aktif",
            "icon": "process_monitor",
            "cultural_icon": "wayang_proses",
            "description": "Monitor semua proses yang berjalan"
        },
        {
            "id": "kinerja",
            "name": "Kinerja Sistem",
            "icon": "performance",
            "cultural_icon": "gamelan_kinerja",
            "description": "Monitor CPU, RAM, dan kinerja sistem"
        },
        {
            "id": "jaringan",
            "name": "Jaringan",
            "icon": "network",
            "cultural_icon": "jaring_nelayan",
            "description": "Monitor aktivitas jaringan"
        },
        {
            "id": "penyimpanan",
            "name": "Penyimpanan",
            "icon": "storage",
            "cultural_icon": "lumbung_data",
            "description": "Monitor penggunaan disk dan storage"
        },
        {
            "id": "aplikasi",
            "name": "Aplikasi",
            "icon": "applications",
            "cultural_icon": "khapp_monitor",
            "description": "Monitor aplikasi .khapp yang berjalan"
        }
    ],
    "chart_types": [
        {
            "id": "batik_line",
            "name": "Grafik Garis Batik",
            "description": "Line chart dengan motif batik"
        },
        {
            "id": "wayang_bar",
            "name": "Bar Chart Wayang",
            "description": "Bar chart dengan siluet wayang"
        },
        {
            "id": "gamelan_pie",
            "name": "Pie Chart Gamelan",
            "description": "Pie chart dengan ornamen gamelan"
        },
        {
            "id": "traditional_gauge",
            "name": "Gauge Tradisional",
            "description": "Gauge dengan ornamen candi"
        }
    ],
    "alert_types": [
        {
            "id": "cpu_high",
            "name": "CPU Tinggi",
            "threshold": 80,
            "sound": "gamelan_warning.wav",
            "cultural_message": "Penggunaan CPU seperti tari kecak yang intens!"
        },
        {
            "id": "memory_low",
            "name": "Memori Rendah",
            "threshold": 90,
            "sound": "gong_alert.wav",
            "cultural_message": "Memori hampir penuh seperti pasar tradisional!"
        },
        {
            "id": "disk_full",
            "name": "Disk Penuh",
            "threshold": 95,
            "sound": "kendang_urgent.wav",
            "cultural_message": "Penyimpanan penuh seperti lumbung padi!"
        },
        {
            "id": "network_down",
            "name": "Jaringan Terputus",
            "threshold": 0,
            "sound": "suling_sad.wav",
            "cultural_message": "Koneksi terputus seperti benang layang-layang!"
        }
    ],
    "cultural_features": {
        "batik_progress_bars": true,
        "wayang_process_icons": true,
        "gamelan_sound_alerts": true,
        "traditional_color_coding": true,
        "indonesian_terminology": true,
        "cultural_animations": true,
        "ornamental_borders": true,
        "traditional_number_format": true
    },
    "performance_metrics": [
        {
            "id": "cpu_usage",
            "name": "Penggunaan CPU",
            "unit": "persen",
            "cultural_unit": "bagian dari seratus",
            "update_interval": 1000
        },
        {
            "id": "memory_usage",
            "name": "Penggunaan Memori",
            "unit": "MB",
            "cultural_unit": "mega bita",
            "update_interval": 1000
        },
        {
            "id": "disk_usage",
            "name": "Penggunaan Disk",
            "unit": "GB",
            "cultural_unit": "giga bita",
            "update_interval": 5000
        },
        {
            "id": "network_speed",
            "name": "Kecepatan Jaringan",
            "unit": "Mbps",
            "cultural_unit": "mega bit per detik",
            "update_interval": 1000
        },
        {
            "id": "temperature",
            "name": "Suhu Sistem",
            "unit": "Â°C",
            "cultural_unit": "derajat Celsius",
            "update_interval": 2000
        }
    ],
    "localization": {
        "default_language": "id_ID",
        "supported_languages": ["id_ID", "en_US", "jv_ID", "su_ID"]
    },
    "resources": {
        "icons": "resources/icons/",
        "sounds": "resources/sounds/",
        "cultural_assets": "cultural/",
        "themes": "resources/themes/",
        "charts": "resources/charts/"
    }
}
