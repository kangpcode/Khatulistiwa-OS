{
    "name": "Builder GUI",
    "version": "1.0.0",
    "description": "Visual application builder untuk membuat .khapp dengan preview dan upload ke KhatStore",
    "author": "Tim Khatulistiwa OS",
    "category": "development",
    "type": "visual_builder",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "gringsing",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#7C2D12",
            "secondary": "#DC2626",
            "accent": "#F87171",
            "background": "#FEF2F2"
        }
    },
    "permissions": [
        "file_system_access",
        "project_creation",
        "code_generation",
        "preview_execution",
        "network_upload",
        "cultural_assets_access",
        "template_management",
        "build_system_access",
        "sdk_integration",
        "store_publishing"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khatsdk.khat",
        "khatstore.khat"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "visual_ui_designer": true,
        "drag_drop_components": true,
        "code_editor": true,
        "live_preview": true,
        "project_templates": true,
        "cultural_components": true,
        "traditional_layouts": true,
        "batik_themes": true,
        "indonesian_code_completion": true,
        "build_integration": true,
        "store_publishing": true,
        "collaborative_editing": true,
        "version_control": true,
        "asset_management": true
    },
    "project_templates": [
        {
            "id": "basic_app",
            "name": "Aplikasi Dasar",
            "cultural_name": "Aplikasi Sederhana",
            "description": "Template aplikasi dasar dengan KhatUI",
            "icon": "basic_template",
            "cultural_icon": "rumah_sederhana"
        },
        {
            "id": "cultural_app",
            "name": "Aplikasi Budaya",
