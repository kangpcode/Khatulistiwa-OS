            "description": "Template dengan elemen budaya Indonesia",
            "icon": "cultural_template",
            "cultural_icon": "rumah_adat"
        },
        {
            "id": "game_app",
            "name": "Game Tradisional",
            "cultural_name": "Permainan Nusantara",
            "description": "Template game dengan tema tradisional",
            "icon": "game_template",
            "cultural_icon": "permainan_rakyat"
        },
        {
            "id": "business_app",
            "name": "Aplikasi Bisnis",
