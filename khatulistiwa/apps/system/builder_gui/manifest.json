    "publishing_options": [
        {
            "id": "khatstore",
            "name": "KhatStore",
            "cultural_name": "Toko Khat",
            "description": "Publish ke KhatStore resmi",
            "requires_account": true
        },
        {
            "id": "local_install",
            "name": "Local Install",
            "cultural_name": "Pasang Lokal",
            "description": "Install langsung ke sistem",
            "requires_account": false
        },
        {
            "id": "export_file",
            "name": "Export File",
            "cultural_name": "Ekspor Berkas",
            "description": "Export sebagai file .khapp",
            "requires_account": false
        }
    ],
    "cultural_features": {
        "traditional_code_templates": true,
        "indonesian_variable_names": true,
        "cultural_ui_patterns": true,
        "batik_color_schemes": true,
        "traditional_animations": true,
        "gamelan_sound_integration": true,
        "wayang_character_assets": true,
        "indonesian_documentation": true
    },
    "localization": {
        "default_language": "id_ID",
        "supported_languages": ["id_ID", "en_US", "jv_ID", "su_ID"]
    },
    "resources": {
        "icons": "resources/icons/",
        "sounds": "resources/sounds/",
        "cultural_assets": "cultural/",
        "themes": "resources/themes/",
        "templates": "resources/templates/",
        "components": "resources/components/"
    }
