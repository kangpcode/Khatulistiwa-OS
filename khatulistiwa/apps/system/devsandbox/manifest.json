{
    "name": "DevSandbox",
    "version": "1.0.0",
    "description": "Mode sandbox developer untuk pengujian aplikasi dengan tema laboratorium tradisional Indonesia",
    "author": "Tim Khatulistiwa OS",
    "category": "development",
    "type": "developer_sandbox",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "ceplok",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#7C3AED",
            "secondary": "#8B5CF6",
            "accent": "#A78BFA",
            "background": "#F5F3FF"
        }
    },
    "permissions": [
        "sandbox_management",
        "application_testing",
        "system_isolation",
        "resource_monitoring",
        "debug_access",
        "cultural_assets_access",
        "file_system_sandbox",
        "network_isolation",
        "process_monitoring",
        "security_testing"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khatsandbox.khat",
        "khatdebug.khat"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "isolated_environment": true,
        "resource_monitoring": true,
        "security_testing": true,
        "performance_profiling": true,
        "debug_tools": true,
        "cultural_testing_metaphors": true,
        "traditional_laboratory_concept": true,
        "indonesian_terminology": true,
        "sandbox_visualization": true,
        "automated_testing": true,
        "vulnerability_scanning": true,
        "cultural_development_tools": true
    },
    "sandbox_types": [
        {
            "id": "basic_sandbox",
            "name": "Basic Sandbox",
            "cultural_name": "Kotak Pasir Dasar",
            "description": "Sandbox dasar untuk pengujian aplikasi",
            "icon": "basic_sandbox",
            "cultural_icon": "kotak_pasir_sederhana",
            "isolation_level": "medium",
            "resource_limit": "normal"
        },
        {
            "id": "secure_sandbox",
            "name": "Secure Sandbox",
            "cultural_name": "Kotak Pasir Aman",
            "description": "Sandbox dengan isolasi keamanan tinggi",
            "icon": "secure_sandbox",
            "cultural_icon": "kotak_pasir_terkunci",
            "isolation_level": "high",
            "resource_limit": "restricted"
        },
        {
            "id": "performance_sandbox",
            "name": "Performance Sandbox",
            "cultural_name": "Kotak Pasir Kinerja",
            "description": "Sandbox untuk pengujian performa",
            "icon": "performance_sandbox",
            "cultural_icon": "kotak_pasir_cepat",
            "isolation_level": "low",
            "resource_limit": "unlimited"
        },
        {
            "id": "network_sandbox",
            "name": "Network Sandbox",
            "cultural_name": "Kotak Pasir Jaringan",
            "description": "Sandbox dengan akses jaringan terbatas",
            "icon": "network_sandbox",
            "cultural_icon": "kotak_pasir_terhubung",
            "isolation_level": "medium",
            "resource_limit": "network_limited"
        },
        {
            "id": "cultural_sandbox",
            "name": "Cultural Sandbox",
            "cultural_name": "Kotak Pasir Budaya",
            "description": "Sandbox untuk pengujian aplikasi berbudaya",
            "icon": "cultural_sandbox",
            "cultural_icon": "kotak_pasir_nusantara",
            "isolation_level": "medium",
            "resource_limit": "cultural_enhanced"
        }
    ],
    "testing_tools": [
        {
            "id": "resource_monitor",
            "name": "Resource Monitor",
            "cultural_name": "Pemantau Sumber Daya",
            "description": "Monitor penggunaan CPU, RAM, disk",
            "icon": "resource_monitor",
            "cultural_icon": "timbangan_sumber_daya"
        },
        {
            "id": "security_scanner",
            "name": "Security Scanner",
            "cultural_name": "Pemindai Keamanan",
            "description": "Scan kerentanan keamanan aplikasi",
            "icon": "security_scanner",
            "cultural_icon": "mata_elang_keamanan"
        },
        {
            "id": "performance_profiler",
            "name": "Performance Profiler",
            "cultural_name": "Profil Kinerja",
            "description": "Analisis performa aplikasi",
            "icon": "performance_profiler",
            "cultural_icon": "ukur_kecepatan"
        },
        {
            "id": "memory_analyzer",
            "name": "Memory Analyzer",
            "cultural_name": "Analisis Memori",
            "description": "Analisis penggunaan memori",
            "icon": "memory_analyzer",
            "cultural_icon": "ingatan_digital"
        },
        {
            "id": "network_tracer",
            "name": "Network Tracer",
            "cultural_name": "Pelacak Jaringan",
            "description": "Trace aktivitas jaringan",
            "icon": "network_tracer",
            "cultural_icon": "jejak_jaring"
        },
        {
            "id": "cultural_validator",
            "name": "Cultural Validator",
            "cultural_name": "Validator Budaya",
            "description": "Validasi elemen budaya dalam aplikasi",
            "icon": "cultural_validator",
            "cultural_icon": "penjaga_budaya"
        }
    ],
    "isolation_levels": [
        {
            "id": "low",
            "name": "Low Isolation",
            "cultural_name": "Isolasi Rendah",
            "description": "Akses terbatas ke sistem",
            "restrictions": ["limited_file_access"],
            "color": "#10B981"
        },
        {
            "id": "medium",
            "name": "Medium Isolation",
            "cultural_name": "Isolasi Sedang",
            "description": "Isolasi standar dengan pembatasan",
            "restrictions": ["sandboxed_file_system", "limited_network"],
            "color": "#F59E0B"
        },
        {
            "id": "high",
            "name": "High Isolation",
            "cultural_name": "Isolasi Tinggi",
            "description": "Isolasi ketat dengan pembatasan ketat",
            "restrictions": ["virtual_file_system", "no_network", "limited_resources"],
            "color": "#EF4444"
        }
    ],
    "resource_limits": [
        {
            "id": "unlimited",
            "name": "Unlimited",
            "cultural_name": "Tanpa Batas",
            "cpu_limit": 100,
            "memory_limit": "unlimited",
            "disk_limit": "unlimited",
            "network_limit": "unlimited"
        },
        {
            "id": "normal",
            "name": "Normal",
            "cultural_name": "Normal",
            "cpu_limit": 50,
            "memory_limit": "1GB",
            "disk_limit": "10GB",
            "network_limit": "100Mbps"
        },
        {
            "id": "restricted",
            "name": "Restricted",
            "cultural_name": "Terbatas",
            "cpu_limit": 25,
            "memory_limit": "512MB",
            "disk_limit": "1GB",
            "network_limit": "10Mbps"
        }
    ],
    "testing_scenarios": [
        {
            "id": "basic_functionality",
            "name": "Basic Functionality",
            "cultural_name": "Fungsi Dasar",
            "description": "Test fungsi dasar aplikasi",
            "tests": ["startup", "ui_rendering", "basic_operations", "shutdown"]
        },
        {
            "id": "stress_testing",
            "name": "Stress Testing",
            "cultural_name": "Uji Tekanan",
            "description": "Test aplikasi dengan beban tinggi",
            "tests": ["high_cpu_load", "memory_pressure", "disk_io_stress", "network_flood"]
        },
        {
            "id": "security_testing",
            "name": "Security Testing",
            "cultural_name": "Uji Keamanan",
            "description": "Test keamanan aplikasi",
            "tests": ["permission_check", "input_validation", "buffer_overflow", "injection_attacks"]
        },
        {
            "id": "cultural_compliance",
            "name": "Cultural Compliance",
            "cultural_name": "Kepatuhan Budaya",
            "description": "Test kepatuhan terhadap standar budaya",
            "tests": ["cultural_elements", "indonesian_terminology", "traditional_colors", "cultural_sounds"]
        }
    ],
    "debug_features": [
        {
            "id": "breakpoints",
            "name": "Breakpoints",
            "cultural_name": "Titik Henti",
            "description": "Set breakpoint untuk debugging",
            "icon": "breakpoint",
            "cultural_icon": "titik_berhenti"
        },
        {
            "id": "variable_inspector",
            "name": "Variable Inspector",
            "cultural_name": "Pemeriksa Variabel",
            "description": "Inspect nilai variabel",
            "icon": "variable_inspector",
            "cultural_icon": "kaca_pembesar_data"
        },
        {
            "id": "call_stack",
            "name": "Call Stack",
            "cultural_name": "Tumpukan Panggilan",
            "description": "Lihat call stack aplikasi",
            "icon": "call_stack",
            "cultural_icon": "tumpukan_perintah"
        },
        {
            "id": "log_viewer",
            "name": "Log Viewer",
            "cultural_name": "Penampil Log",
            "description": "Lihat log aplikasi real-time",
            "icon": "log_viewer",
            "cultural_icon": "buku_catatan"
        }
    ],
    "cultural_features": {
        "traditional_laboratory_metaphor": true,
        "indonesian_testing_terminology": true,
        "cultural_sandbox_visualization": true,
        "batik_progress_indicators": true,
        "traditional_testing_ceremonies": true,
        "gamelan_debug_sounds": true,
        "ornamental_tool_interfaces": true,
        "cultural_testing_wisdom": true
    },
    "automation_features": [
        {
            "id": "auto_test_suite",
            "name": "Auto Test Suite",
            "cultural_name": "Rangkaian Uji Otomatis",
            "description": "Jalankan test suite secara otomatis",
            "icon": "auto_test",
            "cultural_icon": "robot_penguji"
        },
        {
            "id": "continuous_monitoring",
            "name": "Continuous Monitoring",
            "cultural_name": "Pemantauan Berkelanjutan",
            "description": "Monitor aplikasi secara berkelanjutan",
            "icon": "continuous_monitor",
            "cultural_icon": "mata_tak_lelah"
        },
        {
            "id": "report_generation",
            "name": "Report Generation",
            "cultural_name": "Pembuat Laporan",
            "description": "Generate laporan testing otomatis",
            "icon": "report_gen",
            "cultural_icon": "penulis_laporan"
        }
    ],
    "audio_feedback": [
        {
            "id": "test_start",
            "name": "Test Start",
            "cultural_name": "Mulai Uji",
            "sound_file": "gamelan_test_start.ogg",
            "volume": 0.6
        },
        {
            "id": "test_pass",
            "name": "Test Pass",
            "cultural_name": "Uji Berhasil",
            "sound_file": "chime_success.ogg",
            "volume": 0.7
        },
        {
            "id": "test_fail",
            "name": "Test Fail",
            "cultural_name": "Uji Gagal",
            "sound_file": "gong_failure.ogg",
            "volume": 0.8
        },
        {
            "id": "debug_break",
            "name": "Debug Break",
            "cultural_name": "Henti Debug",
            "sound_file": "wooden_click.ogg",
            "volume": 0.5
        }
    ],
    "localization": {
        "default_language": "id_ID",
        "supported_languages": ["id_ID", "en_US", "jv_ID", "su_ID"]
    },
    "resources": {
        "icons": "resources/icons/",
        "sounds": "resources/sounds/",
        "cultural_assets": "cultural/",
        "themes": "resources/themes/",
        "tools": "resources/tools/"
    }
}
