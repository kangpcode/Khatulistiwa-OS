{
    "name": "KhatNotif",
    "version": "1.0.0",
    "description": "Sistem notifikasi realtime dengan suara gamelan dan kontrol izin aplikasi",
    "author": "Tim Khatulistiwa OS",
    "category": "system",
    "type": "notification_system",
    "cultural": {
        "indonesian_elements": true,
        "batik_theme": "sekar_jagad",
        "garuda_animations": true,
        "traditional_sounds": true,
        "cultural_colors": {
            "primary": "#059669",
            "secondary": "#10B981",
            "accent": "#34D399",
            "background": "#ECFDF5"
        }
    },
    "permissions": [
        "system_notifications",
        "app_permission_management",
        "audio_playback",
        "display_overlay",
        "system_integration",
        "user_interaction",
        "cultural_assets_access",
        "realtime_monitoring",
        "priority_management",
        "notification_history"
    ],
    "dependencies": [
        "khatui_runtime.khat",
        "khatcore_runtime.khat",
        "khataudio.khat",
        "khatnotif.khatlib"
    ],
    "min_os_version": "1.0.0",
    "ui_framework": "KhatUI",
    "features": {
        "realtime_notifications": true,
        "permission_control": true,
        "notification_history": true,
        "priority_management": true,
        "cultural_sounds": true,
        "traditional_animations": true,
        "app_permission_ui": true,
        "notification_grouping": true,
        "do_not_disturb": true,
        "scheduled_notifications": true,
        "interactive_notifications": true,
        "cultural_notification_styles": true
    },
    "notification_types": [
        {
            "id": "system",
            "name": "Sistem",
            "cultural_name": "Pemberitahuan Sistem",
            "priority": "high",
            "sound": "gong_system.wav",
            "icon": "system_notification",
            "cultural_icon": "gong_emas"
        },
        {
            "id": "security",
            "name": "Keamanan",
            "cultural_name": "Peringatan Keamanan",
            "priority": "critical",
            "sound": "kendang_alert.wav",
            "icon": "security_notification",
            "cultural_icon": "keris_peringatan"
        },
        {
            "id": "app",
            "name": "Aplikasi",
            "cultural_name": "Pemberitahuan Aplikasi",
            "priority": "normal",
            "sound": "gamelan_soft.wav",
            "icon": "app_notification",
            "cultural_icon": "wayang_app"
        },
        {
            "id": "update",
            "name": "Pembaruan",
            "cultural_name": "Pembaruan Sistem",
            "priority": "medium",
            "sound": "suling_update.wav",
            "icon": "update_notification",
            "cultural_icon": "bunga_pembaruan"
        },
        {
            "id": "network",
            "name": "Jaringan",
            "cultural_name": "Koneksi Jaringan",
            "priority": "low",
            "sound": "angklung_network.wav",
            "icon": "network_notification",
            "cultural_icon": "jaring_nelayan"
        }
    ],
    "priority_levels": [
        {
            "id": "critical",
            "name": "Kritis",
            "cultural_name": "Sangat Penting",
            "color": "#DC2626",
            "sound_volume": 100,
            "display_duration": 0,
            "bypass_dnd": true
        },
        {
            "id": "high",
            "name": "Tinggi",
            "cultural_name": "Penting",
            "color": "#EA580C",
            "sound_volume": 80,
            "display_duration": 10000,
            "bypass_dnd": false
        },
        {
            "id": "normal",
            "name": "Normal",
            "cultural_name": "Biasa",
            "color": "#059669",
            "sound_volume": 60,
            "display_duration": 5000,
            "bypass_dnd": false
        },
        {
            "id": "low",
            "name": "Rendah",
            "cultural_name": "Tidak Penting",
            "color": "#6B7280",
            "sound_volume": 40,
            "display_duration": 3000,
            "bypass_dnd": false
        }
    ],
    "cultural_features": {
        "gamelan_notification_sounds": true,
        "batik_notification_backgrounds": true,
        "wayang_notification_icons": true,
        "traditional_animation_effects": true,
        "indonesian_notification_text": true,
        "cultural_priority_indicators": true,
        "traditional_time_format": true,
        "ornamental_notification_borders": true
    },
    "permission_categories": [
        {
            "id": "location",
            "name": "Lokasi",
            "cultural_name": "Akses Tempat",
            "description": "Mengakses informasi lokasi perangkat",
            "icon": "location_permission",
            "cultural_icon": "peta_nusantara"
        },
        {
            "id": "camera",
            "name": "Kamera",
            "cultural_name": "Akses Kamera",
            "description": "Menggunakan kamera untuk foto dan video",
            "icon": "camera_permission",
            "cultural_icon": "mata_garuda"
        },
        {
            "id": "microphone",
            "name": "Mikrofon",
            "cultural_name": "Akses Suara",
            "description": "Merekam audio dan suara",
            "icon": "microphone_permission",
            "cultural_icon": "gamelan_mikrofon"
        },
        {
            "id": "storage",
            "name": "Penyimpanan",
            "cultural_name": "Akses Berkas",
            "description": "Membaca dan menulis file",
            "icon": "storage_permission",
            "cultural_icon": "lumbung_data"
        },
        {
            "id": "network",
            "name": "Jaringan",
            "cultural_name": "Akses Internet",
            "description": "Koneksi ke internet dan jaringan",
            "icon": "network_permission",
            "cultural_icon": "jaring_koneksi"
        }
    ],
    "notification_styles": [
        {
            "id": "traditional",
            "name": "Tradisional",
            "description": "Gaya notifikasi dengan ornamen Indonesia",
            "background": "batik_pattern",
            "border": "ornamen_candi",
            "font": "traditional_font"
        },
        {
            "id": "modern",
            "name": "Modern",
            "description": "Gaya notifikasi minimalis modern",
            "background": "gradient_modern",
            "border": "clean_border",
            "font": "modern_font"
        },
        {
            "id": "cultural",
            "name": "Budaya",
            "description": "Gaya notifikasi dengan elemen wayang",
            "background": "wayang_background",
            "border": "ornamen_wayang",
            "font": "cultural_font"
        }
    ],
    "localization": {
        "default_language": "id_ID",
        "supported_languages": ["id_ID", "en_US", "jv_ID", "su_ID"]
    },
    "resources": {
        "icons": "resources/icons/",
        "sounds": "resources/sounds/",
        "cultural_assets": "cultural/",
        "themes": "resources/themes/",
        "animations": "resources/animations/"
    }
}
